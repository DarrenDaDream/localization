<?xml version="1.0"?>
<launch>

	<param name ="/use_sim_time" value="true"/>

    <arg name="dataset" value="uwb31"/>

    <rosparam file="$(find uwb_driver)/cfg/anchor.yaml" command="load" />

    <node name="rosbag_play" pkg="rosbag" type="play" output="screen" args="-s 1 --clock -l $(find localization)/bag/$(arg dataset).bag"/>
  
    <node pkg="localization" type="localization_node" name="localization_node" output="screen">
        <rosparam command="delete" param="topic" />
        <rosparam file="$(find localization)/cfg/uwb_only.yaml" command="load" />
    </node>


    <node name="velocity_estimation" pkg="localization" type="velocity_estimation.py" respawn="false" output="screen" >
    </node>

    
</launch>